{
  "include": ["./src/", "scripts"],
  "exclude": ["node_modules", "scripts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["src/@types/*"],
      "client/*": ["src/client/*"],
      "server/*": ["src/server/*"],
      "config/*": ["src/config/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
